rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /users/{userId} {
      allow read: if
        request.auth != null;
    }
    match /tracks/{trackId} {
      allow read: if
        request.auth != null && request.auth.uid in resource.data.members;
      allow create, update: if
        request.auth != null && request.auth.uid in request.resource.data.members;
      allow delete: if
        request.auth != null && request.auth.uid in get(/databases/$(database)/documents/tracks/$(trackId)).data.members
    }
    match /steps/{stepId} {
      allow read: if
        request.auth != null && request.auth.uid in get(/databases/$(database)/documents/tracks/$(resource.data.track_id)).data.members;
      allow create, update: if
        request.auth != null && request.auth.uid in get(/databases/$(database)/documents/tracks/$(request.resource.data.track_id)).data.members;
      allow delete: if
        request.auth != null && request.auth.uid == resource.data.posted_by;
    }
  }
}
